*.mat       text eol=lf
*.asset     text eol=lf
*.anim      text eol=lf
*.controller text eol=lf

# Code / configs
*.cs        text eol=lf
*.json      text eol=lf
*.yml       text eol=lf
*.yaml      text eol=lf
*.md        text eol=lf

